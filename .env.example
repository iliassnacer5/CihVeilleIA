# ============================================
# CIH-Veille-IA — Backend Environment Variables
# ============================================
# Copy this file to .env and update the values.

# --- Environment ---
ENV=local
DEBUG=true

# --- API Security ---
API_SECRET_KEY=change-me-to-a-random-secret-key
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# --- MongoDB ---
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=VeillePlus
MONGODB_COLLECTION_ENRICHED=enriched_documents

# --- CORS ---
# Comma-separated list of allowed origins (use * for dev)
ALLOWED_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# --- Azure / Outlook (Optional — for email alerts) ---
